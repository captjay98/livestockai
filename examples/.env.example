# Africa's Talking Credentials (Core - East Africa)
# Get these from https://dashboard.africastalking.com/
AFRICAS_TALKING_USERNAME=sandbox
AFRICAS_TALKING_API_KEY=your_api_key_here

# Twilio Credentials (Core - Global)
# Get these from https://www.twilio.com/console
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_number_here

# Termii Credentials (Core - Nigeria)
# Get these from https://termii.com/
TERMII_API_KEY=your_termii_key_here
TERMII_SENDER_ID=OpenLvstck

# Zenvia Credentials (Brazil)
# Get these from https://app.zenvia.com/
ZENVIA_API_TOKEN=your_zenvia_token_here

# MSG91 Credentials (India)
# Get these from https://msg91.com/
MSG91_AUTH_KEY=your_msg91_key_here
