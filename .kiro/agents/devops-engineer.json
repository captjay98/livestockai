{
  "name": "devops-engineer",
  "description": "DevOps specialist for Cloudflare Workers and edge deployment - guardian of production reliability",
  "keyboardShortcut": "ctrl+shift+4",
  "welcomeMessage": "ðŸ› ï¸ DevOps Engineer ready. I manage Cloudflare deployments, secrets, and infrastructure.",
  "prompt": "file://../prompts/agents/devops-engineer.md",
  "tools": [
    "read",
    "write",
    "shell",
    "grep",
    "glob",
    "aws",
    "code",
    "web_search",
    "web_fetch",
    "knowledge",
    "todo_list",
    "thinking",
    "introspect",
    "subagent",
    "@sequential-thinking",
    "@cloudflare-bindings",
    "@cloudflare-builds",
    "@cloudflare-observability",
    "@cloudflare-docs"
  ],
  "allowedTools": [
    "read",
    "write",
    "shell",
    "grep",
    "glob",
    "aws",
    "code",
    "web_search",
    "web_fetch",
    "knowledge",
    "todo_list",
    "thinking",
    "introspect",
    "subagent",
    "@sequential-thinking",
    "@cloudflare-bindings",
    "@cloudflare-builds",
    "@cloudflare-observability",
    "@cloudflare-docs"
  ],
  "toolsSettings": {
    "write": {
      "allowedPaths": [
        "wrangler.jsonc",
        ".github/**",
        "*.md",
        ".kiro/**",
        ".env*",
        "package.json"
      ]
    },
    "shell": {
      "allowedCommands": [
        "wrangler *",
        "bun *",
        "cat *",
        "ls *",
        "grep *",
        "find *",
        "git status",
        "git log *",
        "curl *",
        "echo *"
      ],
      "autoAllowReadonly": true,
      "deniedCommands": ["rm -rf *", "sudo *"]
    }
  },
  "resources": [
    "file://AGENTS.md",
    "file://README.md",
    "file://wrangler.jsonc",
    "file://.github/PULL_REQUEST_TEMPLATE.md",
    {
      "type": "knowledgeBase",
      "source": "file://./docs",
      "name": "ProjectDocs",
      "description": "Architecture, database, deployment, testing, and API documentation",
      "indexType": "best",
      "autoUpdate": true
    },
    {
      "type": "knowledgeBase",
      "source": "file://./DEVLOG.md",
      "name": "DevLog",
      "description": "Development history, decisions, and progress tracking",
      "indexType": "best",
      "autoUpdate": true
    },
    {
      "type": "knowledgeBase",
      "source": "file://./.github",
      "name": "GitHubWorkflows",
      "description": "GitHub Actions workflows and CI/CD configuration",
      "indexType": "best",
      "autoUpdate": true
    }
  ],
  "hooks": {
    "agentSpawn": [
      {
        "command": "echo 'ðŸš€ DevOps Engineer ready.' && wrangler whoami 2>/dev/null | head -3 || echo 'Wrangler not authenticated'",
        "timeout_ms": 10000
      }
    ],
    "postToolUse": [
      {
        "matcher": "fs_write",
        "command": "bun run lint --fix 2>/dev/null || true",
        "timeout_ms": 30000
      }
    ]
  },
  "includeMcpJson": true,
  "model": "claude-sonnet-4.5"
}
