{
  "name": "frontend-engineer",
  "description": "Frontend specialist for React 19, TanStack Router, and PWA - guardian of user experience and offline functionality",
  "keyboardShortcut": "ctrl+shift+2",
  "welcomeMessage": "ðŸŽ¨ Frontend Engineer ready. I build React components, TanStack Router pages, and PWA features.",
  "prompt": "file://../prompts/agents/frontend-engineer.md",
  "tools": [
    "read",
    "write",
    "shell",
    "grep",
    "glob",
    "aws",
    "code",
    "web_search",
    "web_fetch",
    "knowledge",
    "todo_list",
    "thinking",
    "introspect",
    "subagent",
    "@sequential-thinking"
  ],
  "allowedTools": [
    "read",
    "write",
    "shell",
    "grep",
    "glob",
    "aws",
    "code",
    "web_search",
    "web_fetch",
    "knowledge",
    "todo_list",
    "thinking",
    "introspect",
    "subagent",
    "@sequential-thinking"
  ],
  "toolsSettings": {
    "write": {
      "allowedPaths": [
        "app/components/**",
        "app/routes/**",
        "app/styles.css",
        "public/**",
        "tests/**",
        "*.md"
      ]
    },
    "shell": {
      "allowedCommands": [
        "bun *",
        "cat *",
        "ls *",
        "grep *",
        "find *",
        "head *",
        "tail *",
        "git status",
        "git diff *"
      ],
      "autoAllowReadonly": true,
      "deniedCommands": ["rm -rf *", "sudo *"]
    }
  },
  "resources": [
    "file://AGENTS.md",
    "file://README.md",
    "file://app/routes/__root.tsx",
    "file://app/features/modules/types.ts",
    "file://app/components/dialogs/batch-dialog.tsx",
    "file://app/features/settings/currency.ts",
    "file://app/lib/i18n/config.ts",
    {
      "type": "knowledgeBase",
      "source": "file://./docs",
      "name": "ProjectDocs",
      "description": "Architecture, database, deployment, testing, and API documentation",
      "indexType": "best",
      "autoUpdate": true
    },
    {
      "type": "knowledgeBase",
      "source": "file://./DEVLOG.md",
      "name": "DevLog",
      "description": "Development history, decisions, and progress tracking",
      "indexType": "best",
      "autoUpdate": true
    },
    {
      "type": "knowledgeBase",
      "source": "file://./app/components",
      "name": "ComponentLibrary",
      "description": "UI components - dialogs, forms, layouts, and reusable elements",
      "indexType": "best",
      "autoUpdate": true
    },
    "skill://.kiro/skills/tanstack-router/SKILL.md",
    "skill://.kiro/skills/tanstack-query/SKILL.md",
    "skill://.kiro/skills/rugged-utility/SKILL.md",
    "skill://.kiro/skills/batch-centric-design/SKILL.md",
    "skill://.kiro/skills/offline-first/SKILL.md",
    "skill://.kiro/skills/i18n-patterns/SKILL.md",
    "skill://.kiro/skills/multi-currency/SKILL.md"
  ],
  "hooks": {
    "agentSpawn": [
      {
        "command": "echo 'ðŸŽ¨ Frontend Engineer ready.' && ls app/components/*.tsx 2>/dev/null | wc -l | xargs -I {} echo '{} components found'",
        "timeout_ms": 5000
      }
    ],
    "postToolUse": [
      {
        "matcher": "fs_write",
        "command": "bun run lint --fix 2>/dev/null || true",
        "timeout_ms": 30000
      }
    ]
  },
  "includeMcpJson": true,
  "model": "claude-sonnet-4.5"
}
