{
  "mcpServers": {
    "neon": {
      "command": "npx",
      "args": ["-y", "@neondatabase/mcp-server-neon"],
      "env": {
        "NEON_API_KEY": "${NEON_API_KEY}"
      },
      "disabled": false,
      "autoApprove": [
        "list_projects",
        "get_project",
        "get_database_tables",
        "describe_table_schema"
      ]
    }
  }
}
