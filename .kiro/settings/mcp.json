{
  "mcpServers": {
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
      "disabled": false,
      "autoApprove": ["sequentialthinking"]
    },
    "neon": {
      "command": "bunx",
      "args": [
        "mcp-remote",
        "https://mcp.neon.tech/mcp",
        "3334",
        "--cache-dir",
        "${HOME}/.mcp-cache/neon"
      ],
      "disabled": false,
      "autoApprove": [
        "list_projects",
        "get_project",
        "get_database_tables",
        "describe_table_schema",
        "get_database_schema",
        "list_databases"
      ]
    },

    "cloudflare-bindings": {
      "command": "bunx",
      "args": [
        "mcp-remote",
        "https://bindings.mcp.cloudflare.com/mcp",
        "3335",
        "--cache-dir",
        "${HOME}/.mcp-cache/cloudflare-bindings"
      ],
      "disabled": false,
      "autoApprove": [
        "accounts_list",
        "workers_list",
        "workers_get_worker",
        "workers_get_worker_code",
        "r2_buckets_list",
        "r2_bucket_get"
      ]
    },
    "cloudflare-builds": {
      "command": "bunx",
      "args": [
        "mcp-remote",
        "https://builds.mcp.cloudflare.com/mcp",
        "3336",
        "--cache-dir",
        "${HOME}/.mcp-cache/cloudflare-builds"
      ],
      "disabled": false,
      "autoApprove": [
        "workers_builds_list_builds",
        "workers_builds_get_build",
        "workers_builds_get_build_logs"
      ]
    },
    "cloudflare-observability": {
      "command": "bunx",
      "args": [
        "mcp-remote",
        "https://observability.mcp.cloudflare.com/mcp",
        "3337",
        "--cache-dir",
        "${HOME}/.mcp-cache/cloudflare-observability"
      ],
      "disabled": false,
      "autoApprove": [
        "observability_keys",
        "observability_values",
        "query_worker_observability"
      ]
    },
    "cloudflare-docs": {
      "command": "bunx",
      "args": [
        "mcp-remote",
        "https://docs.mcp.cloudflare.com/mcp",
        "3338",
        "--cache-dir",
        "${HOME}/.mcp-cache/cloudflare-docs"
      ],
      "disabled": false,
      "autoApprove": ["search_cloudflare_documentation"]
    }
  }
}
