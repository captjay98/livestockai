{
  "name": "open-livestock-manager",
  "private": true,
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "vite dev --port 3001",
    "build": "vite build",
    "start": "node .output/server/index.mjs",
    "preview": "wrangler dev",
    "test": "vitest run",
    "lint": "eslint",
    "format": "prettier",
    "check": "prettier --write . && eslint --fix",
    "db:migrate": "bun run app/lib/db/migrate.ts",
    "db:rollback": "bun run app/lib/db/migrate.ts rollback",
    "db:reset": "bun run app/lib/db/reset.ts",
    "db:seed": "bun run app/lib/db/seeds/production.ts",
    "db:seed:prod": "bun run app/lib/db/seeds/production.ts",
    "db:seed:dev": "bun run app/lib/db/seeds/development.ts",
    "deploy": "vite build && wrangler deploy",
    "docs:generate": "typedoc"
  },
  "dependencies": {
    "@base-ui/react": "^1.0.0",
    "@fontsource-variable/inter": "^5.2.8",
    "@fontsource-variable/jetbrains-mono": "^5.2.8",
    "@fontsource-variable/manrope": "^5.2.8",
    "@neondatabase/serverless": "^1.0.2",
    "@tailwindcss/vite": "^4.1.17",
    "@tanstack/query-async-storage-persister": "^5.90.18",
    "@tanstack/react-query": "^5.90.16",
    "@tanstack/react-query-persist-client": "^5.90.18",
    "@tanstack/react-router": "1.139.16",
    "@tanstack/react-start": "1.139.14",
    "@tanstack/react-table": "^8.21.3",
    "@vitejs/plugin-react": "^5.1.1",
    "better-auth": "^1.4.10",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "decimal.js": "^10.6.0",
    "i18next": "^25.7.4",
    "idb-keyval": "^6.2.2",
    "jspdf": "^4.0.0",
    "kysely": "^0.28.9",
    "kysely-neon": "^2.0.2",
    "lucide-react": "^0.562.0",
    "nodemailer": "^7.0.12",
    "pg": "^8.16.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-i18next": "^16.5.3",
    "resend": "^6.7.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0",
    "vite": "^7.2.6",
    "vite-tsconfig-paths": "^5.1.4",
    "wrangler": "^4.58.0"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.20.1",
    "@neondatabase/mcp-server-neon": "^0.6.5",
    "@tanstack/eslint-config": "^0.3.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^22.10.2",
    "@types/nodemailer": "^7.0.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/coverage-v8": "^3.0.0",
    "fast-check": "^4.5.3",
    "jsdom": "^27.0.0",
    "prettier": "^3.5.3",
    "rollup-plugin-visualizer": "^6.0.5",
