{
  "name": "jayfarms",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev --port 3000",
    "build": "vite build",
    "start": "node .output/server/index.mjs",
    "preview": "vite preview",
    "test": "vitest run",
    "lint": "eslint",
    "format": "prettier",
    "check": "prettier --write . && eslint --fix",
    "db:migrate": "bun run app/lib/db/migrate.ts",
    "db:rollback": "bun run app/lib/db/migrate.ts rollback",
    "db:seed": "bun run app/lib/db/seed.ts",
    "db:reset": "psql -h localhost -U captjay98 -c 'DROP DATABASE IF EXISTS jayfarms' && psql -h localhost -U captjay98 -c 'CREATE DATABASE jayfarms' && bun run db:migrate && bun run db:seed"
  },
  "dependencies": {
    "@base-ui/react": "^1.0.0",
    "@fontsource-variable/inter": "^5.2.8",
    "@tailwindcss/vite": "^4.1.17",
    "@tanstack/react-router": "1.139.16",
    "@tanstack/react-start": "1.139.14",
    "@types/bcrypt": "^6.0.0",
    "@vitejs/plugin-react": "^5.1.1",
    "bcrypt": "^6.0.0",
    "better-auth": "^1.4.10",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "decimal.js": "^10.6.0",
    "jspdf": "^4.0.0",
    "kysely": "^0.28.9",
    "lucide-react": "^0.562.0",
    "pg": "^8.16.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0",
    "vite": "^7.2.6",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "devDependencies": {
    "@tanstack/eslint-config": "^0.3.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.16.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "fast-check": "^4.5.3",
    "jsdom": "^27.0.0",
    "prettier": "^3.5.3",
    "tailwindcss": "^4",
    "typescript": "^5.7.2",
    "vitest": "^3.0.5"
  }
}
